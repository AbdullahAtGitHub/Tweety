@{
    ViewBag.Title = "Settings";
}
@using MvcApplication1.Models;

@model User

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <link href="~/Content/Menubar.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Settings.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
</head>
<body>
    <div class="row">
        @{User user = (User)Model;
            
                <img src="@user.display_pic" alt="Avatar">
                <span id="name">Name: @user.first_name&nbsp;@user.last_name</span><i class="fas fa-pen"></i><br />
                <span id="username">&#64;@user.username</span><i class="fas fa-pen"></i><br />
                <span id="DOB">@user.DOB</span><i class="fas fa-pen"></i><br />
                <span id="gender">@user.gender</span><i class="fas fa-pen"></i><br />
                <span id="status">@user.status</span><i class="fas fa-pen"></i><br />
                <span id="country">@user.country</span><i class="fas fa-pen"></i><br />
                <span id="email">@user.email</span><i class="fas fa-pen"></i><br />
                <span id="password">@user.password</span><i class="fas fa-pen"></i><br />

                <br /><br /><br /><br /><br /><br /><br />
            
        }
    </div>
    <div class="wrapper">
        @*row*@
        <div class="column">
            <ul>
                <li><a href="~/Home/HomePage"><i class="fas fa-home"></i>Home </a></li>
                <br>
                <li><a href="~/Home/ProfilePage"><i class="fas fa-user"></i>Profile     </a></li>
                <br>
                <li><a href="~/Home/Explore"><i class="fas fa-hashtag"></i>Explore     </a></li>
                <br>
                <li><a href="~/Home/Notifications"><i class="fas fa-bell"></i>Notifications     </a></li>
                <br>
                <li><a href="~/Home/Messages"><i class="fas fa-envelope"></i>Messages   </a></li>
                <br>
                <li  class="active"><a href="~/Home/Settings"><i class="fas fa-cog"></i>Settings    </a></li>
                <br>
                <li><a href="~/Home/LogOut"><i class="fas fa-sign-out-alt"></i>Logout   </a></li>
                <br>
            </ul>

        </div>
    </div>
