@{
    ViewBag.Title = "Notifications";
}

@using MvcApplication1.Models;
@model dynamic

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <link href="~/Content/Menubar.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Notifications.css" rel="stylesheet" />
    <link href="~/Content/RightColumn.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
</head>
<body>
    <div class="wrapper">
        @*row*@
        <div class="column">
            @*column1*@
            @{User user = Model.User;
                <img src="@user.display_pic" height="160" width="160" alt="Avatar">
                <h2>@user.first_name&nbsp;@user.last_name</h2>
            }
            <ul>
                <li><a href="~/Home/HomePage"><i class="fas fa-home"></i>Home </a></li>
                <br>
                <li><a href="~/Home/ProfilePage"><i class="fas fa-user"></i>Profile     </a></li>
                <br>
                <li><a href="~/Home/Explore"><i class="fas fa-hashtag"></i>Explore     </a></li>
                <br>
                <li class="active"><a href="~/Home/Notifications"><i class="fas fa-bell"></i>Notifications     </a></li>
                <br>
                <li><a href="~/Home/Messages"><i class="fas fa-envelope"></i>Messages   </a></li>
                <br>
                <li><a href="~/Home/Settings"><i class="fas fa-cog"></i>Settings    </a></li>
                <br>
                <li><a href="~/Home/LogOut"><i class="fas fa-sign-out-alt"></i>Logout   </a></li>
                <br>
            </ul>

        </div>

        <div >
            <table border="1">
                <thead>
                    <tr>
                        <td>nID</td>
                        <td>uID</td>
                        <td>nDate</td>
                        <td>nTime</td>
                        <td>rFlag</td>
                        <td>nText</td>
                    </tr>
                </thead>

                @foreach (Notification notifications in Model.Notifications)
                {
                    <tr>

                        <td>@notifications.notificationID</td>
                        <td>@notifications.userID</td>
                        <td>@notifications.nDate</td>
                        <td>@notifications.nTime</td>
                        <td>@notifications.readFlag</td>
                        <td>@notifications.n_Text</td>
                    </tr>
                }

            </table>
        </div>

        <div >

        </div>
    </div>




</body>
</html>
